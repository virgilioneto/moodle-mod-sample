{{!
    @template mod_sample/component1

    Classes required for JS:
    * None

    Data attibutes required for JS:
    * None

    Context variables required for this template:
    * items

    Example context (json):
    {
        items: [
            {
                id: {Number},
                field_1: {Number},
                field_2: {String},
                field_3: {HTMLString},
                field_4: {Number}
            }
        ]
    }
}}
{{#items}}
<div class="col-md-3">
    <div class="card">
        <header class="card-header">{{id}} - {{field_2}}</header>
        <div class="card-block">{{{field_3}}}</div>
        <footer class="card-header">{{field_1}} / {{field_4}}</footer>
    </div>
</div>
{{/items}}